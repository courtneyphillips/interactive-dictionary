<div class="jumbotron">
  <div class="container">
    <h1>The Interactive Dictionary</h1>
    <p class="lead">Definitions for the word <strong><%= @word.term %></strong></p>
  </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-6">
          <div class="container">
            <h2>Dictionary Entry <span class="glyphicon glyphicon-book" aria-hidden="true"></span></h2>
            <h3><%= @word.term %></h3>
            <ul>
              <h4>
                <% @definitions.each() do |definition| %>
                  <li><%= definition %> </li>
                <% end %>
              </h4>
            </ul>
          </div>
        </div>
        <div class="col-xs-6">
          <h2>Add a new Definition <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
          <br>
          <form action="/definitions/<%= @word.id() %>" method="post">
            <label for="definition">Definition:</label>
            <input id="definition" name="definition" type="definition">
            <button type="submit" class="btn btn-primary btn-sm">Add Definition</button>
          </form>
        </div>
    </div>
    <br><br><br>
    <p><a class="btn btn-primary btn-md" href="/" role="button">Go Back</a></p>
</div>
