<div class="jumbotron">
  <div class="container">
    <h1>The Interactive Dictionary</h1></div>
    <p><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></p>
    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
    <p>Definitions for the word <strong><%= @word.term %></strong></p>
    <p><a class="btn btn-primary" href="/" role="button">Go Back</a></p>
  </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-xs-6">
          <div class="container">

            <h2>Dictionary Entry:</h2>

            <%= @word.term %>

          <ul>
            <% @definitions.each() do |definition| %>
            <li><%= definition %> </li>
                <% end %>
          </ul>
          </div>
        </div>
        <div class="col-xs-6">
          <h2>Add a new Definition:</h2>
          <form action="/definitions/<%= @word.id() %>" method="post">
            <label for="definition">Definition:</label>
            <input id="definition" name="definition" type="definition">
            <button type="submit">Add Definition</button>
          </form>
        </div>
    </div>
</div>
